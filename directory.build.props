<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="build.props"/>

  <PropertyGroup>
    <TopDir>$(MSBuildThisFileDirectory)</TopDir>
    <Src>$(TopDir)</Src>
    <AppsRoot>$(Src)apps/</AppsRoot>
    <LibsRoot>$(Src)libs/</LibsRoot>
    <ImportDefs>$(LibsRoot)imports/</ImportDefs>

    <CgRoot>$(Src)cg/</CgRoot>
    <TestRoot>$(Src)test/</TestRoot>
    <BuildRootDir>$(TopDir).build\</BuildRootDir>
    <OutputPath>$(BuildRootDir)bin\$(MsBuildProjectName)\$(Configuration)\</OutputPath>
    <DocumentationFile>$(OutputPath)$(TargetFramework)\$(MsBuildProjectName).xml</DocumentationFile>
    <IntermediateRoot>$(BuildRootDir)obj\$(MsBuildProjectName)\$(Configuration)\</IntermediateRoot>
    <IntermediateBuildDir>$(IntermediateRoot)</IntermediateBuildDir>
    <BaseIntermediateOutputPath>$(IntermediateRoot)</BaseIntermediateOutputPath>
    <IntermediateOutputPath>$(IntermediateRoot)</IntermediateOutputPath>
    <BuildBinRoot>$(BuildRootDir)bin\</BuildBinRoot>
  </PropertyGroup>

  <PropertyGroup>
    <ZLibPath>$(BuildBinRoot)z0.lib\$(Configuration)\$(TargetFramework)\z0.lib.dll</ZLibPath>
    <ChecksPath>$(BuildBinRoot)z0.test.checks\$(Configuration)\$(TargetFramework)\z0.test.checks.dll</ChecksPath>
    <ZTestPath>$(BuildBinRoot)z0.test.units\$(Configuration)\$(TargetFramework)\z0.test.units.dll</ZTestPath>
    <CgCommonPath>$(BuildBinRoot)z0.codegen.common\$(Configuration)\$(TargetFramework)\z0.codegen.common.dll</CgCommonPath>
    <CgIntelPath>$(BuildBinRoot)z0.codegen.intel\$(Configuration)\$(TargetFramework)\z0.codegen.intel.dll</CgIntelPath>
    <CgLlvmPath>$(BuildBinRoot)z0.codegen.llvm\$(Configuration)\$(TargetFramework)\z0.codegen.llvm.dll</CgLlvmPath>
  </PropertyGroup>

  <Import Project="projects.props"/>

</Project>